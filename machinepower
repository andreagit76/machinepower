#!/usr/bin/env python3

def get_uptime():
    with open("/proc/uptime") as f:
        sec = float(f.read().split()[0])
    h = int(sec // 3600)
    m = int((sec % 3600) // 60)
    s = int(sec % 60)
    return f"{h}h, {m}m, {s}s"

def get_ram_usage():
    mem = {}
    with open("/proc/meminfo") as f:
        for line in f:
            k, v = line.split(":")
            mem[k] = int(v.strip().split()[0])
    used = mem["MemTotal"] - mem["MemAvailable"]
    return f"{used / 1024 / 1024:.2f} GB"

def get_cpu_temp():
    temps = []
    for i in range(10):
        try:
            with open(f"/sys/class/thermal/thermal_zone{i}/temp") as f:
                temps.append(int(f.read()) / 1000)
        except:
            pass
    return f"{sum(temps)/len(temps):.1f} Â°C" if temps else "N/A"

print(f"ON: {get_uptime()}")
print(f"RAM usg: {get_ram_usage()}")
print(f"CPU temp: {get_cpu_temp()}")
